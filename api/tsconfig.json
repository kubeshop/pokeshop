{
  "compilerOptions": {
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es6",
    "module": "CommonJS",
    "outDir": ".build/",
    "moduleResolution": "node",
    "lib": ["es6", "es7"],
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "@pokemon/*": [
        "src/*"
      ]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"],
  "types": ["node", "aws-sdk"]
}
